{
  "manifest_version": 3,
  "name": "SyncPlayer",
  "version": "1.2",
  "description": "Synchronize your video player with connected video players.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
