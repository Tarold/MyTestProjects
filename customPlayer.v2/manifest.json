{
  "manifest_version": 3,
  "name": "CustomPlayer",
  "version": "2.0",
  "description": "Combines video pause functionality with WebSocket spacebar trigger and session management.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "contentScript.js"],
      "all_frames": true
    }
  ]
}
